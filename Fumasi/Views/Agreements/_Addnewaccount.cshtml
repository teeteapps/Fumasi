@model DBL.Entities.Customeragreementaccount
@{
    var identifiertypes = ViewData["identifiertypes"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="allpoliciesModalLabel">New Account Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Postnewagreementaccount" asp-controller="Agreements" method="post">
    <div class="modal-body">
        <div class="row">
            <input asp-for="Agreementcode" hidden />
            <input asp-for="Loyaltycode" hidden />
            <input asp-for="Credittype" hidden />
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label asp-for="Limittype"></label>
                <select asp-for="Limittype" class="form-control form-control-sm">
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                </select>
            </div>
            <div class="col-sm-6">
                <label asp-for="Limitvalue"></label>
                <input asp-for="Limitvalue" type="number" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-5">
                        <label asp-for="Cardtypecode"></label>
                        <select asp-for="Cardtypecode" class="form-control form-control-sm" asp-items="@identifiertypes">
                        </select>
                    </div>
                    <div class="col-sm-7">
                        <label asp-for="Mask"></label>
                        <input asp-for="Mask" class="form-control form-control-sm" placeholder="Card SNO" />
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-sm btn-info" value="Create">
    </div>
</form>