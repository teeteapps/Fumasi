                </div>
            </div>
        </div>
    </div>
</div>
<!--Start of all Modals-->
<div class="modal fade mt-5" id="allpoliciesModal" tabindex="-1" role="dialog" aria-labelledby="allpoliciesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
        </div>
    </div>
</div>

<!--End of all Modals-->

@section Scripts{
    <script type="text/javascript">
        $('#allpoliciesModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var url = button.attr("href");
            var modal = $(this);
            modal.find('.modal-content').load(url);
        });
        $('#allpoliciesModal').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
            $('#allpoliciesModal .modal-content').empty();
        });
    </script>
}