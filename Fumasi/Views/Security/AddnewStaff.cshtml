@model DBL.Entities.Tenantstaffs
@{
    ViewData["Title"] = "Add Staff";
    Layout = "~/Views/Shared/_Layoutauth.cshtml";
    var staffroles = ViewData["staffroles"] as List<SelectListItem>;
    var tenantstations = ViewData["tenantstations"] as List<SelectListItem>;
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="card-text text-sm font-weight-bold">Staff Details</h5>
            </div>
            <form asp-action="Addnewstaff" asp-controller="Security" method="post">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-10 offset-sm-1">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Firstname"></label>
                                        <input asp-for="Firstname" class="form-control form-control-sm" />
                                        <span asp-validation-for="Firstname" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Lastname"></label>
                                        <input asp-for="Lastname" class="form-control form-control-sm" />
                                        <span asp-validation-for="Lastname" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Emailaddress"></label>
                                        <input asp-for="Emailaddress" class="form-control form-control-sm" />
                                        <span asp-validation-for="Emailaddress" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Phonenumber"></label>
                                        <input asp-for="Phonenumber" class="form-control form-control-sm" />
                                        <span asp-validation-for="Phonenumber" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Rolecode"></label>
                                        <select asp-for="Rolecode" class="form-control form-control-sm" id="Prodsubcategory" asp-items="@staffroles">
                                            <option value="0">---Select Role---</option>
                                        </select>
                                        <span asp-validation-for="Rolecode" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Stationcode"></label>
                                        <select asp-for="Stationcode" class="form-control form-control-sm" id="Prodsubcategory" asp-items="@tenantstations">
                                            <option value="0">---Select Station---</option>
                                        </select>
                                        <span asp-validation-for="Stationcode" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Topuplimittype"></label>
                                        <select asp-for="Topuplimittype" class="form-control form-control-sm" id="Prodsubcategory">
                                            <option value="0">---Select Limit value type---</option>
                                            <option value="Weekly">Weekly</option>
                                            <option value="Monthly">Monthly</option>
                                        </select>
                                        <span asp-validation-for="Topuplimittype" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Topuplimitvalue"></label>
                                        <input asp-for="Topuplimitvalue" class="form-control form-control-sm" />
                                        <span asp-validation-for="Topuplimitvalue" class="text-danger text-sm font-weight-light"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 offset-sm-4">
                                    <input type="submit" class="btn btn-sm btn-info btn-block text-center" value="Submit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>