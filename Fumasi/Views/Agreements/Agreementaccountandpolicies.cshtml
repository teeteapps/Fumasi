                                            </div>
                                            <div class="col-sm-5">
                                                <a asp-action="Addnewaccountfrequencypolicy" asp-controller="Agreements" asp-route-accntcode="@Model.Acccode" class="btn btn-sm btn-info float-right" data-target="#allpoliciesModal" data-toggle="modal">Add Policy</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">

                                    </div>
