@model IEnumerable<DBL.Entities.Vwagreementaccounts>
@using DBL.Helpers;
@{
    ViewData["Title"] = "Agreementaccountdetails";
    Layout = "~/Views/Shared/_Layoutauth.cshtml";
    EncryptDecrypt sec = new EncryptDecrypt();
}
@section Css{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-sm-4">

    </div>
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-12">
                <table id="Agreementaccountsdetail" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Date Of Birth</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>


    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5 class="text-sm">Agreement Account Details</h5>
            </div>
            <div class="card-body">
                <div class="col-sm-12">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="@Url.Action("Agreementaccountandpolicies","Agreements",new {accountcode=sec.Encrypt(item.Accountcode.ToString()) })">@item.Identifiersno</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>