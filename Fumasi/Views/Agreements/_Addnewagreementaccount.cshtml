@model DBL.Entities.Customeragreementaccount
@{
    var identifiers = ViewData["identifiers"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="allpoliciesModalLabel">Agreement Account Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Postnewagreementaccount" asp-controller="Agreements" method="post">
    <div class="modal-body">
        <div class="row">
            <input asp-for="Customercode" hidden />
            <input asp-for="Agreementcode" hidden />
        </div>
        <div class="row">
            <div class="col-sm-7">
                <div class="row">
                    <div class="col-sm-4 mt-1"><label asp-for="Identifiercode"></label></div>
                    <div class="col-sm-8">
                        <select asp-for="Identifiercode" class="form-control form-control-sm" asp-items="@identifiers">
                            <option value="0">---Select Identifier---</option>
                        </select>
                        <span asp-validation-for="Identifiercode" class="text-danger text-sm font-weight-light"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="row">
                    <div class="col-sm-8 float-right mt-1"><label asp-for="Hasdrivercode" class="float-right"></label></div>
                    <div class="col-sm-4 float-left"><input asp-for="Hasdrivercode" class="form-control float-left" type="checkbox" /></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-sm btn-info" value="Create">
    </div>
</form>