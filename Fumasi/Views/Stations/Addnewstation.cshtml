@model DBL.Entities.Stations
@{
    ViewData["Title"] = "Add Station";
    Layout = "~/Views/Shared/_Layoutauth.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="text-sm font-weight-light text-center">Station Details</h5>
            </div>
            <form asp-action="Addnewstation" asp-controller="Stations" method="post">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8 offset-2">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Stationname"></label>
                                        <input asp-for="Stationname" class="form-control form-control-sm" />
                                        <span asp-validation-for="Stationname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Stationreference"></label>
                                        <input asp-for="Stationreference" class="form-control form-control-sm" />
                                        <span asp-validation-for="Stationreference" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Stationaddress"></label>
                                        <input asp-for="Stationaddress" class="form-control form-control-sm" />
                                        <span asp-validation-for="Stationaddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Stationlocation"></label>
                                        <input asp-for="Stationlocation" class="form-control form-control-sm" />
                                        <span asp-validation-for="Stationlocation" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 offset-sm-4">
                            <input type="submit" class="btn btn-sm btn-info btn-block text-center" value="Submit" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>